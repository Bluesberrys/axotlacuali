<div class="page-title">
  <h2>Menu de: <%= restaurante.nombre %></h2>
</div>

<div class="admin-container">
  <div class="add-form admin-side">
    <h3>Agregar plato</h3>
    <form action="/admin/restaurantes/<%= restaurante.id %>/menus/agregar" method="POST">
      <div class="form-item">
        <label>Plato</label>
        <input type="text" name="plato" class="form-control" required />
      </div>
      <div class="form-item">
        <label>Precio Mín.</label>
        <input type="number" step="0.01" name="precio" class="form-control" />
      </div>
      <div class="form-item">
        <label>Precio Máx.</label>
        <input type="number" step="0.01" name="precioMax" class="form-control" />
      </div>
      <button class="btn" type="submit">Agregar</button>
    </form>
  </div>
  <div class="crud-table admin-side">
    <h3>Gestión de platos</h3>
    <table class="table table-striped table-bordered align-middle">
      <thead>
        <tr>
          <th>ID</th>
          <th>Plato</th>
          <th>Precio</th>
          <th>Precio Max</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% if (menu.length === 0) { %>
        <tr>
          <td colspan="5">No hay platos registrados.</td>
        </tr>
        <% } %>
        <% menu.forEach(item => { %>
        <tr>
          <td><%= item.id_menu %></td>
          <td><%= item.plato %></td>
          <td>$<%= item.precio %></td>
          <td><%= item.precio_max > 0 ? '$' + item.precio_max : '-' %></td>
          <td>
            <div class="btns">
              <a href="/admin/menus/<%= item.id_menu %>/editar" class="btn">Editar</a>
              <form action="/admin/menus/<%= item.id_menu %>/eliminar" method="POST" class="needs-confirm" data-confirm="Eliminar este plato?">
                <input type="hidden" name="id_restaurante" value="<%= restaurante.id_restaurantes %>">
                <button type="submit" class="btn btn-danger"><i class="fa-solid fa-x"></i></button>
              </form>
            </div>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../partials/confirm-dialog') %>
<script src="/js/admin.js" defer></script>