<div class="page-title">
  <h2>Menu de: <%= restaurante.nombre %></h2>
</div>

<div class="admin-container">
  <div class="add-form admin-side">
    <h3>Agregar plato</h3>
    <form action="/admin/restaurantes/<%= restaurante.id_restaurantes %>/menus/agregar" method="POST">
      <div class="form-item">
        <label>Plato</label>
        <input type="text" name="plato" class="form-control" required />
      </div>
      <div class="form-item">
        <label>Precio Mín.</label>
        <input type="number" step="0.01" name="precio" class="form-control" />
      </div>
      <div class="form-item">
        <label>Precio Máx.</label>
        <input type="number" step="0.01" name="precioMax" class="form-control" />
      </div>
      <button class="btn" type="submit">Agregar</button>
    </form>
  </div>
  <div class="crud-table admin-side">
    <h3>Gestión de platos</h3>
    <table class="table table-striped table-bordered align-middle">
      <thead>
        <tr>
          <th>ID</th>
          <th>Plato</th>
          <th>Precio</th>
          <th>Precio Max</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% if (menu.length === 0) { %>
        <tr>
          <td colspan="5">No hay platos registrados.</td>
        </tr>
        <% } %>
        <% menu.forEach(item => { %>
        <tr>
          <td data-label="ID"><%= item.id_menu %></td>
          <td data-label="Plato"><%= item.plato %></td>
          <td data-label="Precio">$<%= item.precio %></td>
          <td data-label="Precio Max"><%= item.precio_max > 0 ? '$' + item.precio_max : '-' %></td>
          <td>
            <div class="btns">
              <button class="btn edit-btn" type="button" data-id="<%= item.id_menu %>" data-plato="<%= item.plato %>" data-precio="<%= item.precio %>" data-precio-max="<%= item.precio_max %>">Editar</button>
              <form action="/admin/menus/<%= item.id_menu %>/eliminar" method="POST" class="needs-confirm" data-confirm="Eliminar este plato?">
                <input type="hidden" name="id_restaurante" value="<%= restaurante.id_restaurantes %>">
                <button type="submit" class="btn btn-danger"><i class="fa-solid fa-x"></i></button>
              </form>
            </div>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../partials/confirm-dialog') %>
<!-- Dialog para editar -->
<dialog id="editMenuDialog" class="edit-dialog one-col">
  <h3>Editar plato</h3>
  <form id="editMenuForm" method="POST" class="dialog-form form-1col needs-confirm" data-confirm="Guardar los cambios?">

    <div class="form-item">
      <label>Plato</label>
      <input type="text" id="editPlato" name="plato" class="form-control" required />
    </div>

    <div class="form-item">
      <label>Precio Mín.</label>
      <input type="number" step="0.01" id="editPrecio" name="precio" class="form-control" />
    </div>

    <div class="form-item">
      <label>Precio Máx.</label>
      <input type="number" step="0.01" id="editPrecioMax" name="precioMax" class="form-control" />
    </div>

    <input type="hidden" id="editMenuId" name="id_menu">
    <input type="hidden" name="id_restaurante" value="<%= restaurante.id_restaurantes %>">

    <div class="form-buttons">
      <button type="submit" class="btn">Guardar cambios</button>
      <button type="button" class="btn btn-danger" id="editCancelBtn">Cancelar</button>
    </div>
  </form>
</dialog>
<script src="/js/admin.js" defer></script>