<div class="container py-4">
  <h2 class="mb-4 text-center">Panel de Gestión de Restaurantes</h2>

  <div class="card mb-4">
    <div class="card-header bg-primary text-white">
      <h4 class="mb-0">Agregar Restaurante</h4>
    </div>
    <div class="card-body">
      <form action="/admin/restaurantes/agregar" method="POST">
        <div class="row g-3">
          <div class="col-md-6">
            <label class="form-label">Nombre</label>
            <input type="text" name="nombre" class="form-control" required />
          </div>
          <div class="col-md-6">
            <label class="form-label">Tipo de Comida</label>
            <input type="text" name="tipoComida" class="form-control" />
          </div>
          <div class="col-md-12">
            <label class="form-label">Descripción</label>
            <textarea name="descripcion" class="form-control" rows="2"></textarea>
          </div>
          <div class="col-md-4">
            <label class="form-label">Horario</label>
            <input type="text" name="horario" class="form-control" />
          </div>
          <div class="col-md-4">
            <label class="form-label">Rango de Precio</label>
            <input type="text" name="rangoPrecio" class="form-control" />
          </div>
          <div class="col-md-4">
            <label class="form-label">URL Imagen</label>
            <input type="text" name="imagen" class="form-control" />
          </div>
          <div class="col-md-12">
            <label class="form-label">URL Dirección</label>
            <input type="text" name="urlDireccion" class="form-control" />
          </div>
        </div>
        <div class="mt-3 text-end">
          <button class="btn btn-success" type="submit">Agregar Restaurante</button>
        </div>
      </form>
    </div>
  </div>

  <div class="card">
    <div class="card-header bg-secondary text-white">
      <h4 class="mb-0">Restaurantes Existentes</h4>
    </div>
    <div class="card-body">
      <table class="table table-bordered table-striped align-middle">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>Horario</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% if (restaurantes.length === 0) { %>
          <tr>
            <td colspan="5" class="text-center">No hay restaurantes aún.</td>
          </tr>
          <% } %>
          <% restaurantes.forEach(r => { %>
          <tr>
            <td><%= r.id %></td>
            <td><%= r.nombre %></td>
            <td><%= r.tipoComida %></td>
            <td><%= r.horario %></td>
            <td>
              <a href="/admin/restaurantes/<%= r.id %>/editar" class="btn btn-warning btn-sm">Editar</a>
              <a href="/admin/restaurantes/<%= r.id %>/menus" class="btn btn-info btn-sm">Menús</a>
              <form action="/admin/restaurantes/<%= r.id %>/eliminar" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('¿Eliminar este restaurante?')">Eliminar</button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>